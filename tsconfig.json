{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": false,
    "jsx": "preserve",
    "moduleResolution": "node",
    "noEmit": true, // 表示只做类型检查，而不会输出产物文件
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./", // 解析非相对模块的基础地址，默认是当前目录
    /* "skipLibCheck": true, */
    "paths": {
      // 路径映射，相对于baseUrl
      "@/*": ["src/*"]
    },
    "types": ["@potati/components/global.d.ts"]
  }
}
